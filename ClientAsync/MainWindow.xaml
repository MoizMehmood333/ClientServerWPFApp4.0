<Window x:Class="ClientAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAsync"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="260"
        Width="300">
    <StackPanel>
        <Button x:Name="btnConnect"
                Width="200"
                Margin="20"
                Height="20">Connect</Button>
        <StackPanel  Width="200"
                     Height="30"
                     Orientation="Horizontal">
            <Button x:Name="btnSendText"
                    Width="60"
                    Margin=" 0 0 0 0 ">Send Text</Button>
            <TextBox x:Name="txtToSend"
                     Margin="10 0 0 0"
                     Width="130"></TextBox>
        </StackPanel>
        <Button x:Name="btnSendImage"
                Width="200"
                Margin="20"
                Height="20">Send Image</Button>

        <Button x:Name="btnDisconnect"
                Width="200"
                Margin="0"
                Height="20">Disconnect</Button>
        <TextBlock x:Name="txtSentOn"
                   Margin=" 10 30 10 10"></TextBlock>
    </StackPanel>

</Window>
